{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "vercel-php",
            "config": {
                "php": "8.3" 
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(css|js|images|storage)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}